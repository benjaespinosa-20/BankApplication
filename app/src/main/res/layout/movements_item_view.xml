<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_margin="6dp"
    android:background="@color/list_movement">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="8dp"
        android:paddingVertical="6dp"
        android:layout_marginBottom="4dp"
        android:gravity="center">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/movement_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            tools:background="@mipmap/ic_launcher_round"/>

        <TextView
            android:id="@+id/movement_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GASOLINERA G500"
            android:textSize="18dp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:layout_marginStart="8dp"/>

        <TextView
            android:id="@+id/movement_timestap"
            android:layout_width="wrap_content"
            android:textSize="14dp"
            android:layout_height="wrap_content"
            android:text="Hace 2 horas"/>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="4dp"
        android:paddingHorizontal="8dp"
        android:paddingBottom="8dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$"
            android:textSize="22dp"
            android:textStyle="bold"
            android:layout_marginStart="2dp"/>

        <TextView
            android:id="@+id/movement_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4000"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginStart="2dp"/>

        <TextView
            android:id="@+id/movement_approved"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:maxLines="4"
            android:textStyle="bold"
            android:textSize="20dp"
            android:ellipsize="end"
            android:textColor="@color/red"
            tools:text="Aprobado"/>

    </LinearLayout>

</LinearLayout>